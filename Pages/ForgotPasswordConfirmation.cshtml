@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Wachtwoord resetten - Bevestiging";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Controleer uw e-mail
            </h2>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-md">
            <div class="text-center">
                <svg class="mx-auto h-12 w-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <p class="mt-4 text-gray-600">
                    Er is een e-mail verstuurd naar uw adres met een link om uw wachtwoord te resetten.
                </p>
                <p class="mt-2 text-sm text-gray-500">
                    Als u geen e-mail ontvangt, controleer dan uw spamfolder of probeer het opnieuw.
                </p>
            </div>
            
            <div class="mt-6 text-center">
                <a href="/Login" class="font-medium text-indigo-600 hover:text-indigo-500">
                    Terug naar inloggen
                </a>
            </div>
        </div>
    </div>
</div>
