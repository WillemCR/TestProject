@page
@model TestProject.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Wachtwoord resetten";
}

<h2>Wachtwoord resetten</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Token" />
    
    <div class="form-group">
        <label asp-for="Password">Nieuw wachtwoord</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="ConfirmPassword">Bevestig nieuw wachtwoord</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Wachtwoord resetten</button>
</form>
