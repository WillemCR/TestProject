@page
@model CrewsModel
@{
    ViewData["Title"] = "Ploegen beheer";
}
<style>
    form{display: inline-block;
    margin:0;}
</style>
<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="overflow-hidden shadow-sm rounded-lg border">
        <div class="border-b border-gray-200 p-6">
            <h1 class="text-2xl font-bold text-gray-900">Ploegen beheer</h1>
        </div>
        
        <div class="p-6">
            <div class="flex justify-end mb-4">
                <a asp-page="/Shared/CrewForm" asp-route-id="0" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                    Voeg nieuwe Ploeg toe
                </a>
            </div>

            <div class="bg-white rounded-lg shadow overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Naam
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Acties
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var crew in Model.Crews)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @crew.Name
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <a asp-page="/Shared/CrewForm" asp-route-id="@crew.CrewId" class="text-indigo-600 hover:text-indigo-900 mr-4">
                                            Wijzig
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@crew.CrewId" 
                                              onsubmit="return confirm('Are you sure you want to delete this crew?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="text-red-600 hover:text-red-900">
                                                Verwijder
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>