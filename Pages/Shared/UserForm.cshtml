@page
@model TestProject.Pages.Shared.UserFormModel
@{
    ViewData["Title"] = Model.User.Id == 0 ? "Create User" : "Edit User";
}

<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-sm p-6">
        <h1 class="text-2xl font-bold mb-6">@ViewData["Title"]</h1>
        
        <form method="post" asp-page-handler="Save" class="space-y-6" onsubmit="console.log('Form submitted');">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="User.Id" />
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
                <input type="text" id="name" asp-for="User.Name" required 
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <span asp-validation-for="User.Name" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                <input type="email" id="email" asp-for="User.Email" required
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <span asp-validation-for="User.Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label for="role" class="block text-sm font-medium text-gray-700 mb-2">Role</label>
                <select id="role" asp-for="User.Role" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Select Role</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Value">@role.Text</option>
                    }
                </select>
                <span asp-validation-for="User.Role" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label for="crew" class="block text-sm font-medium text-gray-700 mb-2">Crew</label>
                <select id="crew" asp-for="User.CrewId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Select Crew</option>
                    @foreach (var crew in Model.Crews)
                    {
                        <option value="@crew.Value">@crew.Text</option>
                    }
                </select>
                <span asp-validation-for="User.CrewId" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex justify-end space-x-4 mt-8">
                <a asp-page="/Users" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700">
                    Back to Users
                </a>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>
