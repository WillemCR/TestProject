@page
@model TestProject.Pages.Shared.CrewFormModel
@{
    ViewData["Title"] = Model.Crew.CrewId == 0 ? "Create Crew" : "Edit Crew";
}

<div class="max-w-2xl mx-auto px-4 py-8">
    <div class="bg-white shadow-sm rounded-lg border">
        <div class="border-b border-gray-200 p-6">
            <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
        </div>

        <form method="post" class="p-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Crew.CrewId" />

            <div class="space-y-6">
                <div>
                    <label asp-for="Crew.Name" class="block text-sm font-medium text-gray-700">Crew Name</label>
                    <div class="mt-1">
                        <input asp-for="Crew.Name" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" />
                    </div>
                    <span asp-validation-for="Crew.Name" class="text-sm text-red-600"></span>
                </div>

                <div class="flex justify-end space-x-3">
                    <a asp-page="/Crews" class="bg-gray-100 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-200">
                        Cancel
                    </a>
                    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                        @(Model.Crew.CrewId == 0 ? "Create" : "Save")
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}